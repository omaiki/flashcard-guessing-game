<h3><%= @card.question %></h3>
<form action="/guesses" method="POST">
  <input type="text" name="user_answer" placeholder="Type your guess">
  <input type="hidden" name="card_id" value="<%= @card.id %>">
  <input type="hidden" name="correct_answer" value="<%= @card.answer %>">
  <input type="submit" name="Submit">
</form>